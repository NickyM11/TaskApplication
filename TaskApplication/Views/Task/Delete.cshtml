@model TaskApplication.Models.Task
@{
    ViewBag.Title = "Taak verwijderen";
}

@using (Html.BeginForm("Delete", "Task", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>Verwijder taak</h2>
    <div class="form-group">
        @Html.LabelFor(t => t.Description, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(t => t.Description, new { @class = "form-control"})
            @Html.ValidationMessageFor(t => t.Description)
        </div>
    </div>

    <input type="hidden" value="@Model.TaskId" name="TaskId" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Verwijderen" />
        </div>
    </div>
}




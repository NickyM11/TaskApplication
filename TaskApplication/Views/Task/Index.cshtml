@model IEnumerable<TaskApplication.Models.Task>
@{
    ViewBag.Title = "Taken - Index";
}

<body>
    <h2>Taken</h2>

    <table class="table">
        <tr>
            <th>Taakomschrijving</th>
            <th></th>
        </tr>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Description</td>
                <td>@Html.ActionLink("Wijzigen", "Edit", new { id = task.TaskId }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { id = task.TaskId })</td>
            </tr>
        }
    </table>
    @Html.ActionLink("Voeg toe", "Add", null, new { @class = "btn btn-default" })
</body>

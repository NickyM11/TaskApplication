@model TaskApplication.Models.User
@{
    ViewBag.Title = "Toevoegen gebruiker";
}

@using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>Voeg een nieuwe gebruiker toe</h2>

    <div class="form-group">
        @Html.LabelFor(u => u.name, new { @class = "col-md-2 control-label"})

        <div class="col-md-10">
            @Html.TextBoxFor(u => u.name, new { @class = "form-control"})
            @Html.ValidationMessageFor(u => u.name)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Toevoegen" />
        </div>
    </div>
}



@model TaskApplication.Models.User
@{
    ViewBag.Title = "Gebruiker verwijderen";
}

@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>Verwijder gebruiker</h2>

    <div class="form-group">
        @Html.LabelFor(u => u.name, new { @class = "col-md-2 control-label" })

        <div class="col-md-10">
            @Html.TextBoxFor(u => u.name, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.name)
        </div>
    </div>

    <input type="hidden" value="@Model.UserId" name="UserId" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Verwijderen" />
        </div>
    </div>
}


